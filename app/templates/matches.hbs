<script>
document.onkeydown = function(e) {
    switch (e.keyCode) {
        case 37:
            nextRecipe();
            break;
        case 39:
            saveRecipe();
            break;
    }
};
$(document).ready(function(){
    $("#img-hover").hover(function(){
        $(this).css("opacity", "0.5");
        $("#recipe").css("display", "initial");
        }
});

</script>

<div class="container">
	<div class="col-md-3">
		<a onclick=saveRecipe()><img src="fork.png" alt="fork"></a>
	</div>
	<div class="col-md-6" style="text-align:center">
		<div style="position:relative">
			<img src="https://i.imgur.com/x3Z1B4o.jpg" alt="fries mmmm"  id="img-hover" height="500px">
			<h3 id="recipe" style="position:absolute;display:none">Recipe</h3>
		</div>
		<h3 id="label" style="display:inline">Name of Dish</h3>
		<h3 id="level" style="display:inline">Level of Difficulty</h3>
		<div>
		<h3 id="calories" style="display:inline">Calories</h3>
		<h3 id="numIngredients" style="display:inline">Number of ingredients</h3>
		</div>
	</div>
	<div class="col-md-3">
		<a onclick=nextRecipe()><img src="spoon.png" alt="spoon"></a>
	</div>
</div>

{{outlet}}
